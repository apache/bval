            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>${plugin.javadoc.version}</version>
                <inherited>false</inherited>
                <configuration>
                    <doclint>none</doclint>
                    <show>package</show>
                    <quiet>true</quiet>
                    <release>11</release>
                    <links>
